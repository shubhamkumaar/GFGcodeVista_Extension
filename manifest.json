{
    "manifest_version": 3,
    "name": "Code Helper",
    "description": "GFG Extension",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "Images/gfg-bg-16.png",
      "32": "Images/gfg-32.png",
      "48": "Images/gfg-bg-48.png",
      "128": "Images/gfg-128.png"
    },
    "host_permissions": [
      "https://api.together.xyz/v1/chat/completions",
      "https://www.geeksforgeeks.org/problems/*"
    ],
    "background": {
      "service_worker": "scripts/background.js"
    },  
    "permissions": ["scripting", "activeTab","storage"],
    "content_scripts": [
      {
        "js": ["scripts/formatCode.js", "scripts/marked.js"],
        "matches": [
          "https://www.geeksforgeeks.org/problems/*"
        ],
        "css": ["styles/formatCode.css"],
        "type": "module"

      }
    ]
  }
  